<header>
    <h1>Login Form</h1>
</header>

<form id="form">
    <fieldset>
        <label for="username" class="txt-label">Username</label>
        <input id="username" class="txt-label" type=text placeholder="Username" required />
        <br />
        <label class="txt-label" for="passwd">Password</label>
        <input id="passwd" type=password placeholder="Password" required>
        <br />
        <div class="flex-row">
            <button type="submit">Submit</button>
            <button type="reset">Reset</button>
        </div>
    </fieldset>
</form>